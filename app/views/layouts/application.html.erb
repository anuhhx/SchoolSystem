<!DOCTYPE html>
<html>
  <head>
    <title>SchoolSystem</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
    <header>

      <div class="header_image">
        
        <%= image_tag "header_image.png" %>
        
      </div>
      
      <div class="navbar"> <!--Overarching nav bar-->

        <div class="navbuttons">

          <%= link_to 'Home', root_path %>
          <%= link_to 'Counties', root_path %>
          <%= link_to 'Schools', root_path %>

        </div>

      </div>


    </header>

    <main>
      
      <div class="content">
        
        <%= yield %>
        
      </div>
    
    </main>
    
  </body>
  
</html>
