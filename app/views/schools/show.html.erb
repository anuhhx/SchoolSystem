<h1> <%=@school.name %></h1>

<%= image_tag( "divide_plain.png", :class => "content_divide" )%>

<div class="row">
  <div class="column">
         <br>
        
        <iframe width="465" height="465" frameborder="0" style="border: 3px solid #36535E"  
        src="https://www.google.com/maps/embed/v1/place?key=AIzaSyCaYT5wYepNyq1XIwjOHDgnBAxXuycwL00&q=<%=@school.address %>"
        allowfullscreen>
        </iframe>
        
        <h2>Phone Number</h2>
        <%=@school.phone %>
        
        <h2>Address</h2>
        <%=@school.address %>
        
        <h2>Grade Level</h2>
        <%=@school.grade %>
        
        <h2>Website</h2>
        <%=@school.website %>
        
      
  </div>
  
  <div class="column">
      
        <h2> Reviews</h2>
        <% @school.reviews.each do |review| %>
        <div class="circle">
            <strong> <%=review.initials %></strong>
        </div> <%= review.created_at%>
        <p>
        <%=review.comment%>
        </p>
        <%end%>
        
        <%= form_for([@school,@school.reviews.build]) do |f| %>
        <p>
            <%= f.label :initials %> <br>
            <%= f.text_field :initials %>
        </p>
        <p>
            <%= f.label :comment %><br>
            <%= f.text_field :comment %>
        </p>
        <p>
            <%= f.submit%>
        </p>
        <%end%>
        
        <%= link_to "Back", :back %>
        



    </div>
</div>
<br>
<%= image_tag( "divide.png", :class => "content_divide" )%>