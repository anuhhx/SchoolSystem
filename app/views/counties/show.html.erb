<h1>Schools In <%=@county.name%></h1>
<%= image_tag( "divide_plain.png", :class => "content_divide" )%>
<% if @county.schools.length==0%>
<h1>Whoops! No Schools added here yet</h1>
<%else%>
<table>
    <tr>
    <th>Schools</th>
    <th></th>
    </tr>
    <% @county.schools.each do |school| %>
    <tr>
        <td> <%= school.name %></td>
        <td> <%= link_to 'Information', county_school_path(@county, school) %></td>
        <td> <%= link_to 'Edit', edit_county_school_path(@county, school) %></td>
        <td><%= link_to 'Delete', county_school_path(@county, school), method: :delete, data: { confirm: 'Are you sure?' } %></td>
   
    </tr>
    <%end%>
</table>
<%end%>
<br>
<br>
<%= link_to 'New School', new_county_school_path(@county) %>
<br>
<br>
<%= link_to 'Back to Counties', counties_path %>
<%= image_tag( "divide.png", :class => "content_divide" )%>